{
  "compilerOptions": {
    "strict": false,
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": false,
    "lib": ["dom", "ES2017"],
    "declaration": true,
    // "declarationDir": "./types",
    // "sourceMap": true,
    "outDir": "dist",
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}